def encoode():
messege = input("enter a word to encode: ")
letters = "abcdefghijklmopqrstuvwxyz"
key = int(intput("enter a number shift")
cipher = " "

for x in messege:
  if x in letters:
    cipher += letters[(letters.index(x)+key)%(len(letters))]
    
print("your messege is" + cipher)



def decoode():
messege = input("enter a word to encode: ")
letters = "abcdefghijklmopqrstuvwxyz"
key = int(intput("enter a number shift")
cipher = " "

for x in messege:
  if x in letters:
    cipher += letters[(letters.index(x)-key)%(len(letters))]
    
print("your messege is" + cipher)


